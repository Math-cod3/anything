<!DOCTYPE html
  PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:v="urn:schemas-microsoft-com:vml">
<!-- partial:partials/html-head.hbs -->
<!-- partial -->

<body>
  <table id="body-table" width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center" valign="top">
        <table class="w-100 mw6-5 mv4-ns bg-white" width="100%" align="center" border="0" cellpadding="0"
          cellspacing="0">

          <!-- Header -->
          <tr>
            <td class="w-100 tc">
              <!-- partial:partials/logo.hbs --><!-- partial -->
            </td>
          </tr>

          <!-- Intro message -->
          <!-- partial:partials/messages/intro.hbs --><!-- partial -->

          <tr>
            <td>
              <p class="w-100 tc mb4">
                <img src="https://mariafilo.vteximg.com.br/arquivos/email-status-1.png" alt="">
              </p>
            </td>
          </tr>

          <!-- Shipping Summary -->
          <tr>
            <td class="w-100 ph4-ns pv4">
              <h3 class="ffa w-100 align-center mb3">((i18n.shipping.summaryTitle))</h3>
              {{#each orders}}
                <!-- partial:partials/shipping-summary.hbs --><!-- partial -->
              {{/each}}
            </td>
          </tr>

          <!-- Order info -->
          {{#each orders}}
            <tr>
              <td class="w-100 ph4-ns pv4">
                <div class="w-100 bt b--light-gray br2 b-light pa4">
                  <h4 class="ffa ttu">((i18n.common.order)) #{{orderId}}</h4>
                  <p class="mt1 mb2 silver ffa">((i18n.package.seller)) {{sellers.0.name}}</p>

                  <div class="cb pt3">
                    {{#richShippingData shippingData}}
                      {{#group logisticsInfo by="addessId"}}
                        {{#group items by="packageId"}}
                          <!-- partial:partials/package.hbs --><!-- partial -->
                        {{/group}}

                        <!-- Address info -->
                        <!-- partial:partials/address-delivery-title.hbs --><!-- partial -->
                      {{/group}}
                    {{/richShippingData}}

                    <hr class="bt b--light-gray bl-0 br-0 bb-0" />

                    <div class="w-40">
                      <!-- partial:partials/totals.hbs --><!-- partial -->
                    </div>

                    <div class="cb p0"></div>
                  </div>
                </div>
              </td>
            </tr>
          {{/each}}

          <!-- Payment - not splitted -->
          {{#compare split "!=" true}}
            <tr>
              <td class="w-100 ph4-ns pv4">
                <div class="w-100 bt b--light-gray br2 b-light pa4">
                  <h4 class="w100 ffa ttu mb2">((i18n.payment.title))</h4>
                  {{#each orders.0.paymentData.transactions}}
                    <!-- partial:partials/payment.hbs --><!-- partial -->
                    <div class="dib mt2 pv1 ph2 bg-light-gray h6 ffa cwl-m">((i18n.payment.pending))</div>
                  {{/each}}
                </div>
              </td>
            </tr>
          {{/compare}}

          <tr>
            <td class="ph4-ns pt3 pb5">
              <!-- partial:partials/messages/regards.hbs --><!-- partial -->
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>

</html>
