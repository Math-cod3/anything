<table class="" width="100%" border="0" cellpadding="0" cellspacing="0">
  <thead>
  </thead>
  <tbody>
  {{#each items}}
    <!-- back to order items list -->
    {{#each ../../../../items}}
      <!-- show info for this shippingInfo item -->
      {{#eq @index ../itemIndex}}
        <tr>
          <td class="v-top pv2 w3 pr2"><img alt="" src="{{imageUrl}}" /></td>
          <td class="v-top pl2 pt2">
            <h5 class="f5 ffa cwl-m fw7">{{name}}</h5>
            <p class="ffa ma0 cwl-m fw4">
              {{quantity}} ((i18n.common.units))
              {{#if sellingPrice}}
                ((i18n.common.currency)) {{formatCurrency sellingPrice}}
              {{else}}
                ((i18n.common.free))
              {{/if}}
            </p>
          </td>
        </tr>
        <tr><td class="pb3"></td></tr>
        {{#each bundleItems}}
          {{#if name}}
            <tr>
              <td class="v-top pv2 w3 pr2"><img alt="" src="{{imageUrl}}" /></td>
              <td class="v-top pl2 pt2">
                <div class="f5 lh-title mv1-ns">{{name}}</div>
                <div class="ffa ma0 cwl-m fw4">
                  {{quantity}} ((i18n.common.units))
                  {{#if price}}
                    ((i18n.common.currency)) {{formatCurrency price}}
                  {{else}}
                    ((i18n.common.free))
                  {{/if}}
                </div>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      {{/eq}}
    {{/each}}
    </tbody>
  {{/each}}
</table>
