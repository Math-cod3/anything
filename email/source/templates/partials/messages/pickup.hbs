{{#compare items.length '==' shippingData.logisticsInfo.length}}
  <p class="mt2">
    <!-- partial:hi.hbs --><!-- partial -->

    {{#compare items.length '==' 1}}
      <h5>((i18n.shipping.pickupProduct))</h5>
    {{/compare}}
    {{#compare items.length '>' 1}}
      ((i18n.shipping.pickupProducts))
    {{/compare}}
  </p>
{{/compare}}

<!-- Intro message: Just some items shipped -->
{{#compare items.length '!=' shippingData.logisticsInfo.length}}
  <p class="mt2">
    <!-- partial:hi.hbs --><!-- partial -->
    {{#compare items.length '==' 1}}
      ((i18n.shipping.pickupOneProduct))
    {{/compare}}
    {{#compare items.length '>' 1}}
      ((i18n.shipping.pickupSomeProducts))
    {{/compare}}
  </p>
{{/compare}}
